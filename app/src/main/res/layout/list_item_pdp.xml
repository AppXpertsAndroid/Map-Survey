<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_item_pdp_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_item_pdp_tv_btm"
        android:layout_alignParentTop="true"
        android:background="@color/white_color"
        android:padding="@dimen/grid_margin">

        <LinearLayout
            android:id="@+id/ll_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/grid_margin">


            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/ll_img"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:padding="@dimen/grid_margin">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="@dimen/grid_margin"
                android:singleLine="true"
                android:text="title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black_displaydatabundle_text_color" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="@dimen/grid_margin"
                android:paddingRight="@dimen/grid_margin"
                android:paddingBottom="@dimen/grid_margin"
                android:singleLine="true"
                android:text="date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/gray_pdp_textcolor" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/list_item_pdp_tv_btm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divider_lv_items_pdp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_displaydatabundle_bg" />
</LinearLayout>