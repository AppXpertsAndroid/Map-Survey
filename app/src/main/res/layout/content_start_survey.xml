<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="au.appxperts.ga.mapsurvey.activity.StartSurveyActivity"
tools:showIn="@layout/activity_start_survey">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Please Enter Your ID"
        android:textColor="@color/green_panton_spot"
        android:textAllCaps="false"
        android:layout_above="@+id/userid"
        android:layout_marginLeft="@dimen/activity_side_margin"
        android:layout_marginRight="@dimen/activity_side_margin"
        android:padding="8dp"
        android:background="#00000000"
        android:gravity="bottom|center_horizontal"
        />


    <EditText
        android:id="@+id/userid"
        android:layout_above="@+id/buttonOk"
        android:layout_width="match_parent"
        android:hint="Please Enter Your ID"
        android:layout_marginLeft="@dimen/activity_side_margin"
        android:layout_marginRight="@dimen/activity_side_margin"
        android:layout_marginBottom="@dimen/activity_side_margin"
        android:background="@drawable/round_corner_green_textbox"
        android:paddingLeft="@dimen/activity_side_margin"
        android:paddingRight="@dimen/activity_side_margin"
        android:singleLine="true"
        android:layout_height="50dp">

    </EditText>





    <Button
    android:id="@+id/buttonOk"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:text="@string/ok"
    android:textColor="@android:color/white"
    android:textAllCaps="false"
    android:layout_marginLeft="@dimen/activity_side_margin"
    android:layout_marginRight="@dimen/activity_side_margin"
    android:background="@drawable/round_corner_green_parrot"
    android:gravity="center"
    android:layout_centerInParent="true"
    />





    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Friday 21st Feb, 2016"
        android:textColor="@color/green_panton_spot"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/activity_side_margin"
        android:layout_marginRight="@dimen/activity_side_margin"
        android:background="#00000000"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
